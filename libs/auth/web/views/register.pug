- device = typeof(dvc) != 'undefined' ? dvc : { }
input(type='hidden', value= device._id)#userId

#box-form-container.center-vertical.shadow
	form.card.card-body.bg-light(method='post')#register-form
		h2
		h6#sub
		hr
		p#head-collapse
			a.text-decoration-none.dropdown-toggle.btn.btn-primary(data-toggle='collapse', href="#collapseExample", role='button') Security Information 
		.collapse(id="collapseExample")
			.form-group.row
				label.col-sm-4.col-form-label.col-form-label-sm#id-lb Device ID
				.col-sm-7
					input.form-control#id-tf(type='text', name='device_id', value=device.device_id)
			
			.form-group.row
				label.col-sm-4.col-form-label.col-form-label-sm#pwd-lb Device Password
				.col-sm-7
					input.form-control#pwd-tf(type='text', name='device_password', value=device.password)
			
			.form-group.row
				label.col-sm-4.col-form-label.col-form-label-sm#key-lb Key
				.col-sm-7
					input.form-control#key-tf(type='text', name='key', value=device.key)

			.form-group.row
				label.col-sm-4.col-form-label.col-form-label-sm#iv-lb IV
				.col-sm-7
					input.form-control#iv-tf(type='text', name='iv', value=device.iv)
			hr
		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Device Name
			.col-sm-7
				input.form-control#name-tf(type='text', name='device_name', value=device.device_name)

		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Role
			.col-sm-7
				select.form-control#role-tf(name='role')
					if device.role == 'publisher'
						option(value='', disabled='') Select role
						option(selected='') publisher
						option subscriber
					else if device.role == 'subscriber'
						option(value='', disabled='') Select role
						option publisher
						option(selected='') subscriber
					else
						option(value='', disabled='', selected='') Select role
						option publisher
						option subscriber

		.form-group.row
			label.col-sm-4.col-form-label.col-form-label-sm Description
			.col-sm-7
				input.form-control#desc-tf(type='text', name='description' value=device.description)

		hr
		.form-buttons
			button(type='button')#register-form-btn1.btn.btn-outline-dark
			button(type='submit')#register-form-btn2.btn.btn-primary
			button(type='button')#register-form-btn3.btn.btn-outline-dark

include modals/form-errors
